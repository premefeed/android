<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Supreme/PlayboyÂ© Leather Puffy Jacket"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginRight="10dp"
        android:textColor="#757575" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Leather with printed monogram, down fill and quilted satin lining. Removable hood with faux fur trim. Full zip closure with snap placket and patch pockets at lower front. "
        android:id="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:textSize="11dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_alignBottom="@+id/imageView2"
        android:textColor="#757575" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Currently Available"
        android:id="@+id/textView3"
        android:textSize="10dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:gravity="right"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Brown"
        android:id="@+id/textView4"
        android:textSize="10dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/textView2"
        android:gravity="right" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/browser_img"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_open_in_browser_black_24dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share_img"
        android:src="@drawable/ic_share_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/browser_img"
        android:layout_toEndOf="@+id/browser_img" />

</RelativeLayout>